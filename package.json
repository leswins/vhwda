{
  "name": "vhwda",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "sanity:typegen": "pnpm --filter studio run typegen",
    "sanity:deploy": "pnpm --filter studio run deploy",
    "studio:deploy": "pnpm --filter studio run deploy:studio",
    "tokens:pull": "node scripts/pull-figma-tokens.mjs",
    "ci": "pnpm lint && pnpm typecheck && pnpm build"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  }
}