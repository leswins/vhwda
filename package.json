{
  "name": "vhwda",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "sanity:typegen": "pnpm --filter studio run typegen",
    "sanity:deploy": "pnpm --filter studio run deploy",
    "studio:deploy": "pnpm --filter studio run deploy:studio",
    "tokens:pull": "node scripts/pull-figma-tokens.mjs",
    "migrate:oews-salaries": "tsx scripts/migrate-oews-salaries.ts",
    "migrate:career-projections": "tsx scripts/migrate-career-projections.ts",
    "ci": "pnpm lint && pnpm typecheck && pnpm build"
  },
  "dependencies": {
    "@sanity/client": "^6.24.1",
    "csv-parse": "^5.6.0",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/string-similarity": "^4.0.2",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2"
  }
}